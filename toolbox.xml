<xml xmlns="https://developers.google.com/blockly/xml" id="toolbox" style="display: none">
  <category id="uart" name="UART" colour="#0b5394" icon="plug">
    <block type="uno_uart_init">
      <value name="BAUDRATE">
        <shadow type="math_number">
          <field name="NUM">115200</field>
        </shadow>
      </value>
    </block>
    <block type="uno_uart_read_until">
      <value name="END_CHAR">
        <shadow type="text">
          <field name="TEXT">\n</field>
        </shadow>
      </value>
    </block>
    <block type="uno_uart_write_string">
      <value name="MESSAGE">
        <shadow type="text">
          <field name="TEXT"></field>
        </shadow>
      </value>
    </block>
    <block type="uno_uart_read_bytes">
      <value name="BYTES">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
    </block>
    <block type="uno_uart_write_bytes">
      <value name="BYTES">
        <shadow type="text">
          <field name="TEXT">0xAA,0x00,0x00,0x00</field>
        </shadow>
      </value>
    </block>
    <block type="uno_uart_check_data" />
    <!-- <block type="uno_uart_deinit" /> -->
  </category>
</xml>